@model IEnumerable<BlogMVC.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}
 
<div class="containerIndex">
    <div class="stories_block_3x">
        @foreach (var item in Model){
            @if (item.Photo != null)
                {
        <a class="story" asp-action="Post" asp-controller="Home" asp-route-id="@item.Id"  style="background-image: url('data:image/jpeg;base64,@(Convert.ToBase64String(item.Photo))');">
            <span class="story_info">
                <span class="story_title">@item.Title</span>    
            </span>    
        
            
        </a>
            }
        }
    </div>
</div>


        


